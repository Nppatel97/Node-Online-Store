<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title #{pageTitle}
        link(rel="stylesheet", href="/css/main.css")
        block styles
        
    div.backdrop
    header.main-header
        button(id="side-menu-toggle") Menu
        nav.main-header__nav 
            ul.main-header__item-list
                li.main-header__item 
                    a(class=(path === '/' ? 'active' : ''), href='/?page=1') Shop
                li.main-header__item 
                    a(class=(path === '/products' ? 'active' : ''), href='/products') Products
                if(isAuthenticated)
                    li.main-header__item 
                        a(class=(path === '/cart' ? 'active' : ''), href='/cart') Cart 
                    li.main-header__item 
                        a(class=(path === '/orders' ? 'active' : ''), href='/orders') Orders 
                    li.main-header__item 
                        a(class=(path === '/admin/add-product' ? 'active' : ''), href='/admin/add-product') Add Product  
                    li.main-header__item 
                        a(class=(path === '/admin/products' ? 'active' : ''), href='/admin/products') Admin Products 
            ul.main-header__item-list
                if(!isAuthenticated)
                    li.main-header__item 
                        a(class=(path === '/login' ? 'active' : ''), href="/login") Login
                    li.main-header__item 
                        a(class=(path === '/signup' ? 'active' : ''), href="/signup") Signup
                else
                    li.main-header__item
                        form(action="/logout", method="POST") 
                            input(type="hidden", name="_csrf", value=csrfToken)
                            button(type='submit') Logout

        nav.mobile-nav 
            ul.mobile-nav__item-list
                li.mobile-nav__item 
                    a(class=(path === '/' ? 'active' : ''), href='/') Shop
                li.mobile-nav__item 
                    a(class=(path === '/products' ? 'active' : ''), href='/products') Products
                li.mobile-nav__item 
                    a(class=(path === '/cart' ? 'active' : ''), href='/cart') Cart 
                li.mobile-nav__item 
                    a(class=(path === '/orders' ? 'active' : ''), href='/orders') Orders 
                if(isAuthenticated)
                    li.mobile-nav__item 
                        a(class=(path === '/admin/add-product' ? 'active' : ''), href='/admin/add-product') Add Product  
                    li.mobile-nav__item 
                        a(class=(path === '/admin/products' ? 'active' : ''), href='/admin/products') Admin Products 
            ul.mobile-nav__item-list
                if(!isAuthenticated)
                    li.mobile-nav__item  
                        a(class=(path === '/login' ? 'active' : ''), href="/login") Login
                    li.mobile-nav__item  
                        a(class=(path === '/signup' ? 'active' : ''), href="/signup") Signup
                else
                    li.mobile-nav__item 
                        form(action="/logout", method="POST") 
                            input(type="hidden", name="_csrf", value=csrfToken)
                            button(type='submit') Logout
    body
        block content
        script(src="/js/main.js") 
        